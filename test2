import seaborn as sns
import matplotlib.pyplot as plt
import os


def save_figure(folder, name):
    # Create the "figures" folder if it doesn't exist
    os.makedirs(folder, exist_ok=True)

    # Save the plot as a PDF in the "figures" folder
    pdf_filepath = os.path.join(folder, name)
    plt.savefig(pdf_filepath, bbox_inches="tight")

    # Print the filepath where the PDF is saved
    print(f"Seaborn plot saved to: {pdf_filepath}")


# Create a Seaborn plot (replace this with your actual Seaborn code)
sns.set(style="whitegrid")
tips = sns.load_dataset("tips")
ax = sns.barplot(x="day", y="total_bill", data=tips)

# Set the desired width in inches
desired_width_inches = 6.5

# Get the current figure and adjust its size
fig = plt.gcf()

fig.set_size_inches(desired_width_inches, fig.get_size_inches()[1])
plt.show()


# Save plot to folder "figures"
save_figure("figures", "myplot.pdf")
